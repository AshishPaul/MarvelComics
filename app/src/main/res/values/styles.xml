<resources>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppBarOverlayTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlayTheme" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.TransNav" parent="AppTheme.Base">
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base">
        <item name="colorPrimary">@color/colorPrimaryHome</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkHome</item>
        <item name="colorAccent">@color/colorAccentHome</item>
        <item name="android:textColorPrimary">@android:color/primary_text_dark</item>
        <item name="android:textColorPrimaryInverse">@android:color/primary_text_light</item>>
        <item name="android:statusBarColor">@color/colorPrimaryDarkHome</item>
    </style>

    <style name="AppTheme.Home" parent="AppTheme" />

    <style name="AppTheme.Collection" parent="AppTheme.TransNav">
        <item name="colorPrimary">@color/colorPrimaryCollection</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkCollection</item>
        <item name="colorAccent">@color/colorAccentCollection</item>
        <item name="android:textColorPrimary">@android:color/primary_text_light</item>
        <item name="android:textColorPrimaryInverse">@android:color/primary_text_dark</item>>
        <item name="android:statusBarColor">@color/colorPrimaryDarkCollection</item>
    </style>

    <style name="AppTheme.Favorites" parent="AppTheme.TransNav">
        <item name="colorPrimary">@color/colorPrimaryFavorite</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkFavorite</item>
        <item name="colorAccent">@color/colorAccentFavorite</item>
        <item name="android:textColorPrimary">@android:color/primary_text_light</item>
        <item name="android:textColorPrimaryInverse">@android:color/primary_text_dark</item>>
        <item name="android:statusBarColor">@color/colorPrimaryDarkFavorite</item>
    </style>

    <style name="AppTheme.Notification" parent="AppTheme.TransNav">
        <item name="colorPrimary">@color/colorPrimaryNotification</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkNotification</item>
        <item name="colorAccent">@color/colorAccentNotification</item>
        <item name="android:textColorPrimary">@android:color/primary_text_light</item>
        <item name="android:textColorPrimaryInverse">@android:color/primary_text_dark</item>>
        <item name="android:statusBarColor">@color/colorPrimaryDarkNotification</item>
    </style>

    <style name="AppTheme.MyProfile" parent="AppTheme.TransNav">
        <item name="colorPrimary">@color/colorPrimaryMyProfile</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkMyProfile</item>
        <item name="colorAccent">@color/colorAccentMyProfile</item>
        <item name="android:textColorPrimary">@android:color/primary_text_light</item>
        <item name="android:textColorPrimaryInverse">@android:color/primary_text_dark</item>>
        <item name="android:statusBarColor">@color/colorPrimaryDarkMyProfile</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
